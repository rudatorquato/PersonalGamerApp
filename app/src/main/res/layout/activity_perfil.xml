<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PerfilActivity"
    android:orientation="vertical"
    android:background="#657AFF">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="#657AFF"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_gif"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/cardview_dark_background"
                android:src="@drawable/treino" />

            <Button
                android:id="@+id/btn_medidas"
                style="?android:textAppearanceSmall"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border"
                android:textColor="#DCDCDC"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="@string/measures"
                android:textSize="20sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="10dp"
                    app:elevation="@dimen/cardview_default_elevation"
                    tools:ignore="PrivateResource">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Linha 2 com 2 colunas -->
                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Nome:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <!-- Linha 3 com 2 colunas -->
                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Email:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <!-- Linha 4 com 2 colunas -->
                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Telefone:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Info:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_info"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Tipo:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_type_user"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>


                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Username:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="10dip"
                                android:text="Medidas:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Peso:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_weight"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <!-- Linha 3 com 2 colunas -->
                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Altura:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_stature"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <!-- Linha 4 com 2 colunas -->
                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Ombro:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_shoulder"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Torax inspirado:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_inspiredChest"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Braço relaxado:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_leftRelaxedArm"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="E:"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_rightRelaxedArm"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text=" D:"
                                android:textSize="20sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Coxa:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_leftThigh"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="E:"
                                android:textSize="20sp"/>

                            <TextView
                                android:id="@+id/tv_rightThigh"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text=" D:"
                                android:textSize="20sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Antebraço:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_leftForearm"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="E:"
                                android:textSize="20sp" />
                            <TextView
                                android:id="@+id/tv_rightForearm"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text=" D:"
                                android:textSize="20sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Braço contraido:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_leftContractedArm"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="E:"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/tv_rightContractedArm"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text=" D:"
                                android:textSize="20sp"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Cintura:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_waist"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Abdomen:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_abdomen"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Quadril:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_hip"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:textSize="20sp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="Perna:"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_leftLeg"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text="E:"
                                android:textSize="20sp"/>
                            <TextView
                                android:id="@+id/tv_rightLeg"
                                android:layout_weight="1"
                                android:padding="10dip"
                                android:text=" D:"
                                android:textSize="20sp"/>

                        </TableRow>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>