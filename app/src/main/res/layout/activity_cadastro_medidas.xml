<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CadastroMedidasActivity"
    android:orientation="vertical"
    android:background="#657AFF">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="16dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:elevation="@dimen/cardview_default_elevation"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:id="@+id/credential_login_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_peso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_peso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/weight"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_altura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_altura"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/stature"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_ombro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_ombro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/shoulder"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_torax_inspirado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_torax_inspirado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/inspiredChest"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_braco_relaxado_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_braco_reçaxado_d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rightRelaxedArm"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_braco_relaxado_e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_braco_reçaxado_e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/leftRelaxedArm"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_coxa_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_coxa_d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rightThigh"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_coxa_e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_coxa_e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/leftThigh"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_antebraco_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_antebraco_d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rightForearm"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_antebraco_e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_antebraco_e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/leftForearm"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_braco_contraido_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_braco_contraido_d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rightContractedArm"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_braco_contraido_e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_braco_contraido_e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/leftContractedArm"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" /><!-- AQUI vai ser TypeUser-->

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_cintura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_cintura"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/waist"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_abdomen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_abdomen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/abdomen"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_quadril"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_quadril"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hip"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_perna_d"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_perna_d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/rightLeg"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/v_perna_e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <AutoCompleteTextView

                            android:id="@+id/edt_perna_e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/leftLeg"
                            android:textSize="20sp"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_cadastrar"
                        style="?android:textAppearanceSmall"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_border"
                        android:textColor="#DCDCDC"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:text="@string/action_sign_up"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>