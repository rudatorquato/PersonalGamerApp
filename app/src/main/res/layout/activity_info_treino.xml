<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoTreinoActivity"
    android:orientation="vertical"
    android:background="#657AFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#657AFF"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_gif"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:layout_marginBottom="30dp"
            android:src="@drawable/treino" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:elevation="@dimen/cardview_default_elevation"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- Linha 1 com 2 colunas -->
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:text="Nome:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_nome"
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:textSize="20sp" />

                    </TableRow>

                    <!-- Linha 2 com 2 colunas -->
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:text="Série:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_serie"
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:textSize="20sp" />

                    </TableRow>

                    <!-- Linha 3 com 2 colunas -->
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:text="Repetições:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_repeticoes"
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:textSize="20sp" />

                    </TableRow>

                    <!-- Linha 4 com 2 colunas -->
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:text="Carga:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_carga"
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:textSize="20sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:text="Observação:"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_observacao"
                            android:layout_weight="1"
                            android:padding="10dip"
                            android:textSize="20sp" />

                    </TableRow>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>