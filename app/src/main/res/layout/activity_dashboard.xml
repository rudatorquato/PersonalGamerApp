<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DashboardActivity"
    android:background="#657AFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#657AFF"
        app:cardCornerRadius="50dp"
        app:elevation="@dimen/cardview_default_elevation"
        tools:ignore="PrivateResource">

        <ImageView
            android:layout_width="73dp"
            android:layout_height="85dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:padding="0dp"
            android:src="@drawable/quest"
            tools:targetApi="lollipop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/crd_perfil"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:focusable="true"
                app:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="10dp"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#657AFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="98dp"
                        android:layout_height="91dp"
                        android:backgroundTint="@color/cardview_dark_background"
                        android:padding="0dp"
                        android:src="@drawable/perfil"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Perfil"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/crd_qrcode"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:focusable="true"
                app:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="10dp"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#657AFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="98dp"
                        android:layout_height="91dp"
                        android:backgroundTint="@color/cardview_light_background"
                        android:padding="0dp"
                        android:src="@drawable/qrcode"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="QR-Code"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/crd_treino"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:focusable="true"
                app:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="10dp"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#657AFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="98dp"
                        android:layout_height="91dp"
                        android:src="@drawable/treino"
                        android:backgroundTint="@color/cardview_light_background"
                        android:padding="0dp"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp"
                        android:text="Treino"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/crd_personal"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:focusable="true"
                app:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="10dp"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#657AFF"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="98dp"
                        android:layout_height="91dp"
                        android:src="@drawable/personal"
                        android:backgroundTint="@color/cardview_light_background"
                        android:padding="0dp"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:text="Personal"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>