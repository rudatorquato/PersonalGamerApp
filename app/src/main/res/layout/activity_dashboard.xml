<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DashboardActivity"
    android:background="#657AFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/card_usuario"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:focusable="true"
                app:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="10dp"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#657AFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="98dp"
                        android:layout_height="91dp"
                        android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
                        android:padding="0dp"
                        android:src="@drawable/teste"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Perfil"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/card_prescricao"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:focusable="true"
                app:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="10dp"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#657AFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="98dp"
                        android:layout_height="91dp"
                        android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
                        android:padding="0dp"
                        android:src="@drawable/QRCode"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="QR-Code"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/card_paciente"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:focusable="true"
                app:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="10dp"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#657AFF"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="98dp"
                        android:layout_height="91dp"
                        android:src="@drawable/Treino"
                        android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
                        android:padding="0dp"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Treino"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/card_relatorio"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:focusable="true"
                app:elevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="10dp"
                tools:ignore="PrivateResource">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="#657AFF"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="98dp"
                        android:layout_height="91dp"
                        android:src="@drawable/Personal"
                        android:backgroundTint="@color/common_google_signin_btn_text_dark_pressed"
                        android:padding="0dp"
                        tools:targetApi="lollipop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Personal"
                        android:textStyle="bold" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>